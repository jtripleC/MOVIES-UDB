
@{
    ViewBag.Title = "Index";
    var ListaPeliculas = ViewBag.ListaPeliculas;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
<h2>Lista de Peliculas</h2>
<hr />
<a href="@Url.Action("Agregar")">Agregar</a>
<div class="container">
    <div class="row">


        @foreach (var p in ListaPeliculas)
        {
            <div class="col-lg-6">

                


                <div class="card mb-3" style="max-width: 540px; overflow:hidden">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="@p.Imagen" class="img-fluid rounded-start" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body" style="height:294.66px">
                                <h5 class="card-title">@p.Nombre</h5>
                                <p style="font-size:10px; text-align:justify" class="card-text">@p.Descripcion</p>
                                <p class="card-text">@p.Director</p>
                                <p class="card-text"><small class="text-muted">@p.Genero</small></p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        }


    </div>



</div>